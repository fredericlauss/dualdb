{
  "compileOnSave": false,
  "compilerOptions": {
      "strict": true,
      "rootDir": ".",
      "sourceMap": true,
      "declaration": true,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "target": "es2015",
      "module": "CommonJS",
      "lib": ["es2020", "dom"],
      "skipLibCheck": true,
      "skipDefaultLibCheck": true,
      "baseUrl": ".",
      "resolveJsonModule": true,
  },
  "exclude": ["node_modules"],
  "files": []
}